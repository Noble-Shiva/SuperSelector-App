<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="superselector.wipro.topgear.com.superselector.MainActivity">

        <Button
            android:id="@+id/Select_Players_Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/select_players_button" />

        <ListView
            android:id="@+id/list_of_players"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/Select_Players_Button"
            android:layout_alignParentTop="true"
            />

</RelativeLayout>
